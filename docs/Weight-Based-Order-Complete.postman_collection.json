									"    pm.response.to.have.status(200);",
									"    const response = pm.response.json();",
									"    pm.expect(response.categories).to.include.members(['top', 'bottom', 'occasional_wear', 'underwear', 'nightwear', 'accessories']);",
									"    console.log('ðŸ“‹ Available categories:', response.categories.join(', '));",
									"});"
