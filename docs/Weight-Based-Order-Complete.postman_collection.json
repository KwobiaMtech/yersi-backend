		{
			"name": "4. Order Creation & Management",
			"item": [
				{
					"name": "Create Order - Complete Flow",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Order created successfully', function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
									"    const response = pm.response.json();",
									"    pm.expect(response).to.have.property('id');",
									"    pm.expect(response).to.have.property('orderNumber');",
									"    pm.expect(response.status).to.equal('pending');",
									"    ",
									"    pm.environment.set('created_order_id', response.id);",
									"    pm.environment.set('created_order_number', response.orderNumber);",
									"    ",
									"    console.log('âœ… Order Created Successfully:');",
									"    console.log(`   Order Number: ${response.orderNumber}`);",
									"    console.log(`   Order ID: ${response.id}`);",
									"    console.log(`   Status: ${response.status}`);",
									"    console.log(`   Total Weight: ${response.totalWeight}kg`);",
									"    console.log(`   Total Items: ${response.totalItems}`);",
									"    console.log(`   Estimated Total: GHS${response.estimatedMinTotal} - GHS${response.estimatedMaxTotal}`);",
									"});"
								]
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"serviceId\": \"wash-fold\",\n    \"vendorId\": \"vendor123\",\n    \"items\": [\n        {\n            \"itemId\": \"shirt-short-sleeve\",\n            \"name\": \"Shirt (Short Sleeve)\",\n            \"category\": \"top\",\n            \"quantity\": 1,\n            \"weight\": 1,\n            \"specialInstructions\": \"Handle with care\"\n        },\n        {\n            \"itemId\": \"shirt-long-sleeve\",\n            \"name\": \"Shirt (Long Sleeve)\",\n            \"category\": \"top\",\n            \"quantity\": 3,\n            \"weight\": 1\n        }\n    ],\n    \"pickupAddress\": {\n        \"street\": \"123 Main Street, Labone\",\n        \"city\": \"Accra\",\n        \"region\": \"Greater Accra\",\n        \"phone\": \"+233501234567\",\n        \"instructions\": \"Call when you arrive, blue gate\"\n    },\n    \"deliveryAddress\": {\n        \"street\": \"123 Main Street, Labone\",\n        \"city\": \"Accra\",\n        \"region\": \"Greater Accra\",\n        \"phone\": \"+233501234567\"\n    },\n    \"preferredPickupTime\": \"2024-11-08T10:00:00Z\",\n    \"preferredDeliveryTime\": \"2024-11-09T15:00:00Z\"\n}"
