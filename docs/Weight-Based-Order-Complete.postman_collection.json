						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test('Orders retrieved', function () {",
									"    pm.response.to.have.status(200);",
									"    const orders = pm.response.json();",
									"    console.log('ðŸ“‹ User Orders:');",
									"    if (Array.isArray(orders)) {",
									"        orders.forEach((order, index) => {",
									"            console.log(`   ${index + 1}. ${order.orderNumber || order.id} - ${order.status}`);",
									"            if (order.totalWeight) console.log(`      Weight: ${order.totalWeight}kg, Items: ${order.totalItems}`);",
