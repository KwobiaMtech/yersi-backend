{
  "info": {
    "name": "Yersi Authentication Flow - Complete",
    "description": "Complete authentication flow for Yersi Laundry Service API",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000/api/v1"
    },
    {
      "key": "test_email",
      "value": "test@yersi.com"
    },
    {
      "key": "test_password",
      "value": "password123"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "verification_code",
      "value": "123456"
    },
    {
      "key": "reset_code",
      "value": "654321"
    }
  ],
  "item": [
    {
      "name": "1. Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"fullName\": \"John Doe\",\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/register",
          "host": ["{{base_url}}"],
          "path": ["auth", "register"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 201,
          "body": "{\n  \"message\": \"Registration successful. Please check your email to verify your account.\"\n}"
        }
      ]
    },
    {
      "name": "2. Verify Email",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"code\": \"{{verification_code}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/verify-email",
          "host": ["{{base_url}}"],
          "path": ["auth", "verify-email"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 200,
          "body": "{\n  \"message\": \"Email verified successfully. You can now login.\"\n}"
        }
      ]
    },
    {
      "name": "3. Login User",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    const response = pm.response.json();",
              "    pm.collectionVariables.set('access_token', response.access_token);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"password\": \"{{test_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 200,
          "body": "{\n  \"access_token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"refresh_token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": \"690d1dc693a33f54ceaa8175\",\n    \"email\": \"test@yersi.com\",\n    \"fullName\": \"John Doe\",\n    \"credits\": 0,\n    \"isEmailVerified\": true\n  }\n}"
        }
      ]
    },
    {
      "name": "4. Resend Verification",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/resend-verification",
          "host": ["{{base_url}}"],
          "path": ["auth", "resend-verification"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 200,
          "body": "{\n  \"message\": \"Verification email sent successfully\"\n}"
        }
      ]
    },
    {
      "name": "5. Forgot Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/forgot-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "forgot-password"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 200,
          "body": "{\n  \"message\": \"If the email exists, a password reset code has been sent\"\n}"
        }
      ]
    },
    {
      "name": "6. Reset Password",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{test_email}}\",\n  \"code\": \"{{reset_code}}\",\n  \"newPassword\": \"newpassword123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/reset-password",
          "host": ["{{base_url}}"],
          "path": ["auth", "reset-password"]
        }
      },
      "response": [
        {
          "name": "Success",
          "code": 200,
          "body": "{\n  \"message\": \"Password reset successfully\"\n}"
        }
      ]
    }
  ]
}
